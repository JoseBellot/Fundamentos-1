float fac_serie (float a, int n, int x)
{float i,p,l;
a=(3.14/5);
int factorial = 1;
int c =2;
for (l=2;l<=n;l=l+2){
	for (i=1;i<=n;i++){
		factorial=factorial*1;
	}
		c=c+2;
p=pow(x,i)/2;
p=p*(-1);
a=a+p;

}
cout <<a <<endl;
return a;
}
