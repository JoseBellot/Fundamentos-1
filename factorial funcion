float fac_serie (float a, int n, int x);
void main () 

{
	int n,x,factorial;
	float a=(3.14)/5, i,p,l;
	a=(3.14/5);
	cout << " ingrese el valor de n " << endl;
	cin >> n;
	cout << " ingrese el valor de x " << endl;
